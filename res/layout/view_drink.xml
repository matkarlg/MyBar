<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spaces" >
    <RelativeLayout
        android:id="@+id/dLayout"
        android:layout_width="match_parent"
        android:layout_height="440dp" >

        <!-- AC added some stuff -->
        
        <TextView
            android:id="@+id/drinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/drinkName"
            android:textColor="#040404"
            android:textSize="30dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/drinkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@+id/drinkImage"
            android:src="@drawable/ic_drinkicon" />

        <TextView
            android:id="@+id/drinkIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/drinkImage"
            android:layout_marginTop="18dp"
            android:textColor="#34B4E3"
            android:textStyle="bold"
            android:text="@string/drinkIngredients" />

        <TextView
            android:id="@+id/drinkDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/drinkIngredients"
            android:layout_marginTop="24dp"
            android:text="@string/drinkDescription" />

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:rating="2.5" />

        <CheckBox
            android:id="@+id/drinkFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/favorite" />

    </RelativeLayout>

</ScrollView>