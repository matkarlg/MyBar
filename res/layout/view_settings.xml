<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:onClick="clearDB" >

    <TextView
        android:id="@+id/textView2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left|bottom"
        android:layout_row="0"
        android:text="Where are you at the moment?" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="Which theme do you want to use?" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="5"
        android:text="Another very important setting" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="219dp"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="9"
        android:text="Swag Switch (all apps need a Swag Switch)" />

    <Switch
        android:id="@+id/switch1"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="11"
        android:text="Swag" />

    <TextView
        android:id="@+id/textView1"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="13"
        android:text="CLEARS THE DB. USE WITH CAUTION!" />

    <Space
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="15dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="198dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="31dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="4" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="3" />

    <Space
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="12" />

    <Button
        android:id="@+id/button1"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="14"
        android:text="CLEAR DATABASE" />

    <Space
        android:layout_width="1dp"
        android:layout_height="334dp"
        android:layout_column="0"
        android:layout_row="15" />

    <Space
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_column="1"
        android:layout_row="14" />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="8" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="10" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_column="0"
        android:layout_row="11" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="6" />

</GridLayout>